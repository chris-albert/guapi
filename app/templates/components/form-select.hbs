{{#if isMulti}}
  {{#power-select-multiple
    options=options
    renderInPlace=true
    selected=selected
    onchange=(action "onChange")
    onkeydown=(action "handleKeydown")
    searchField="display"
    as |option select|}}
    {{option.display}}
  {{/power-select-multiple}}
{{else}}
  {{#power-select
  options=options
  renderInPlace=true
  selected=selected
  searchField="display"
  onchange=(action "onChange")
  as |option select|}}
    {{option.display}}
  {{/power-select}}
{{/if}}