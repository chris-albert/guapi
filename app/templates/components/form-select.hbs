{{#if isMulti}}
  {{#power-select-multiple
    options=names
    renderInPlace=true
    selected=selected
    onchange=(action "onChange")
    onkeydown=(action "handleKeydown")
    searchField="display"
    as |option select|}}
    {{option.display}}
  {{/power-select-multiple}}
{{else}}
  {{#power-select
  options=names
  renderInPlace=true
  selected=selected
  searchField="display"
  as |option select|}}
    {{option.display}}
  {{/power-select}}
{{/if}}