<nav class="navbar navbar-default navbar-inverse navbar-fixed-top">
    <div class="container-fluid">
        <div class="collapse navbar-collapse">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">{{globalConfig.display}}</a>
            </div>
            <ul class="nav navbar-nav">
              {{#bs-dropdown tagName="li"}}
                {{#bs-dropdown-toggle}}
                    Settings <span class="caret"></span>
                {{/bs-dropdown-toggle}}
                {{#bs-dropdown-menu classNames="dont-close"}}
                    <li>
                        <form class="form dropdown-form">
                          {{#each fields as |field|}}
                            {{form-element
                              field=field
                              displayClass=""
                              inputClass=""
                            }}
                          {{/each}}
                        </form>
                    </li>
                {{/bs-dropdown-menu}}
              {{/bs-dropdown}}
                <p class="navbar-text">{{settingsQuickView}}</p>
            </ul>
            <ul class="nav navbar-nav navbar-right">
              {{#bs-dropdown tagName="li"}}
                {{#bs-dropdown-toggle}}
                  {{loginMessage}}
                {{/bs-dropdown-toggle}}
                {{#bs-dropdown-menu classNames="dont-close"}}
                    <li>
                        <form class="form dropdown-form">
                            <div class="{{logoutHidden}}">
                              {{token}}
                                <button type="button"
                                        class="btn btn-default btn-xs" {{action "logout"}}>Logout
                                </button>
                            </div>
                            <div class="{{loginHidden}}">
                              {{#each loginFields as |field|}}
                                {{form-element field=field displayClass="" inputClass=""}}
                              {{/each}}
                                <button type="button" class="btn btn-default btn-xs login-button">Login
                                </button>
                            </div>
                        </form>
                        <div class="bg-danger login-error">
                          {{loginError}}
                        </div>
                    </li>
                {{/bs-dropdown-menu}}
              {{/bs-dropdown}}
            </ul>
        </div>
    </div>
</nav>
