{
  "display": "TicketFly",
  "settings": [
    {
      "name": "Environment::env",
      "editable": true
    },
    {
      "name": "clientId",
      "editable": false
    },
    {
      "name": "clientSecret",
      "editable": false
    }
  ],
  "auth": {
    "url": "https://{{settings.env}}.ticketfly.com",
    "path": "/account/oauth2/token",
    "method": "POST",
    "location": "form",
    "auth": {
      "type": "basic",
      "user": "clientId",
      "pass": "clientSecret"
    },
    "submit": "Login",
    "fields": [
      "::username",
      {
        "name": "::password",
        "type": "password"
      },
      "::clientId",
      "::clientSecret",
      {
        "name": "grant_type",
        "type": "hidden",
        "value": "password"
      }
    ],
    "response": {
      "settings": {
        "access_token": "token"
      }
    }
  },
  "tabs": [
    "/config/projects/permissions.json",
    "/config/projects/account.json",
    "/config/projects/mod.json"
  ]
}
