{
  "name": "account",
  "display": "Account",
  "baseUrl": "https://{{settings.env}}.ticketfly.com",
  "endpoints": {
    "getToken": {
      "display": "Get Token",
      "path": "/account/oauth2/token",
      "method": "POST",
      "dataLocation": "form",
      "fields": [
        {
          "name": "username",
          "display": "Username"
        },
        {
          "name": "password",
          "display": "Password",
          "type": "password"
        },
        {
          "name": "grant_type",
          "type": "hidden",
          "value": "password"
        }
      ]
    },
    "checkToken": {
      "display": "Check Token",
      "path": "/account/oauth2/check_token",
      "method": "POST",
      "dataLocation": "query",
      "fields": [
        {
          "name": "token",
          "display": "Token"
        }
      ]
    },
    "me": {
      "display": "Me",
      "path": "/account/v2/users/me",
      "method": "GET",
      "jsonRoot": "user",
      "auth": {
        "type": "bearer"
      }
    }
  }
}
