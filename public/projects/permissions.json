{
  "name": "permissions",
  "display": "Permissions",
  "baseUrl": "https://authorization-{{settings.env}}.ticketfly.com",
  "endpoints": {
    "createEmployee": {
      "display": "Create Employee",
      "path": "/aggregator/v1/employees",
      "method": "POST",
      "auth": {
        "type": "bearer"
      },
      "dataLocation": "form",
      "fields": [
        {
          "name": "id",
          "display": "Id"
        },
        {
          "name": "firstName",
          "display": "First Name"
        },
        {
          "name": "lastName",
          "display": "Last Name"
        },
        {
          "name": "email",
          "display": "Email"
        }
      ]
    },
    "getEmployee": {
      "display": "Get Employee",
      "path": "/aggregator/v1/employees/{{id}}",
      "method": "GET",
      "auth": {
        "type": "bearer"
      },
      "dataLocation": "form",
      "fields": [
        {
          "name": "id",
          "display": "Id"
        },
        {
          "name": "domainOrgId",
          "display": "Domain Org Id"
        },
        {
          "name": "clientOrgId",
          "display": "Client Org Id"
        }
      ],
      "response": {
        "jsonRoot": "employee"
      }
    },
    "roles": {
      "display": "Roles",
      "path": "/v2/roles",
      "auth": {
        "type": "bearer"
      },
      "type": "rest",
      "restId": "id",
      "request": {
        "list"  : ["id", "name", "ownerOrgId"],
        "create": ["id", "name", "ownerOrgId"],
        "view"  : ["id"],
        "edit"  : ["name", "ownerOrgId"]
      },
      "fields": ["id", "name", "ownerOrgId", "createdTime"]
    }
  }
}
