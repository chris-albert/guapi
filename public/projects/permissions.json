{
  "name": "permissions",
  "display": "Permissions",
  "baseUrl": "https://authorization-{{settings.env}}.ticketfly.com",
  "endpoints": {
    "createEmployee": {
      "display": "Create Employee",
      "path": "/aggregator/v1/employees",
      "method": "POST",
      "dataLocation": "form",
      "fields": [
        {
          "name": "id",
          "display": "Id"
        },
        {
          "name": "firstName",
          "display": "First Name"
        },
        {
          "name": "lastName",
          "display": "Last Name"
        },
        {
          "name": "email",
          "display": "Email"
        }
      ]
    },
    "getEmployee": {
      "display": "Get Employee",
      "path": "/aggregator/v1/employees/{{id}}",
      "method": "GET",
      "auth": "oauth2",
      "oauth2Header": "token",
      "dataLocation": "form",
      "fields": [
        {
          "name": "id",
          "display": "Id"
        },
        {
          "name": "domainOrgId",
          "display": "Domain Org Id"
        },
        {
          "name": "clientOrgId",
          "display": "Client Org Id"
        }
      ],
      "response": {
        "jsonRoot": "employee"
      }
    },
    "getRole": {
      "display": "Get Role",
      "path": "/v2/roles",
      "method": "GET",
      "dataLocation": "form",
      "fields": [
        {
          "name": "id",
          "display": "Id"
        }
      ]
    }
  }
}
